<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="20dp"
    tools:context=".RegistrationActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src = "@drawable/financewise_logo" />

    <EditText
        android:id="@+id/rgstr_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint = "Full Name"
        android:textColor="#000"
        android:textColorHint="@color/gray"
        android:textSize="20sp"
        android:inputType="text"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/rgstr_contactno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint = "Contact Number"
        android:textColor="#000"
        android:textColorHint="@color/gray"
        android:textSize="20sp"
        android:inputType="number"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/rgstr_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint = "Set Email"
        android:textColor="#000"
        android:textColorHint="@color/gray"
        android:textSize="20sp"
        android:inputType="textEmailAddress"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/rgstr_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Set Password"
        android:inputType="textPassword"
        android:textColor="#000"
        android:textColorHint="@color/gray"
        android:textSize="20sp" />

    <Button
        android:id="@+id/rgstr_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mintgreen"
        android:textColor="@color/white"
        android:textSize="@dimen/browser_actions_context_menu_min_padding"
        android:textStyle="normal"
        android:text="Sign-up"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/rgstrloginQn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already have account? Click here to Log-in"
        android:gravity="center" />

</LinearLayout>