<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    tools:context=".ExpenseActivity">

    <EditText
        android:id="@+id/expense_date"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/date_background"
        android:ems="10"
        android:inputType="date"
        android:minHeight="48dp"
        tools:ignore="SpeakableTextPresentCheck"/>

    <Button
        android:id="@+id/expcategory_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="@drawable/btn_background"
        android:text="Choose Category"
        android:textSize="20dp"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/exp_txtview"
            android:layout_width="237dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="@drawable/textview_background"
            android:textColor="@color/white"
            android:ems="10"
            android:inputType="number"
            tools:ignore="SpeakableTextPresentCheck"/>

        <Button
            android:id="@+id/expcheck_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/btn_background"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:text="Check" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/nine_expbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_background"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:text="9" />

        <Button
            android:id="@+id/eight_expbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_background"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_marginBottom="5dp"
            android:text="8" />

        <Button
            android:id="@+id/seven_expbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_background"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:text="7" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/six_expbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_background"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:text="6" />

        <Button
            android:id="@+id/five_expbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_background"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_marginBottom="5dp"
            android:text="5" />

        <Button
            android:id="@+id/four_expbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_background"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:text="4" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/three_expbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_background"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:text="3" />

        <Button
            android:id="@+id/two_expbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_background"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_marginBottom="5dp"
            android:text="2" />

        <Button
            android:id="@+id/one_expbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_background"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:text="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/zero_expbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_background"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="10dp"
            android:text="0" />

        <Button
            android:id="@+id/dot_expbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_background"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="10dp"
            android:text="." />

        <Button
            android:id="@+id/del_expbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_background"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="10dp"
            android:text="DEL" />

    </LinearLayout>

</LinearLayout>