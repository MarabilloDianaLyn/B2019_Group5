<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="5dp"
    tools:context=".IncomeActivity">

    <EditText
        android:id="@+id/income_date"
        android:layout_width="183dp"
        android:layout_height="66dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/date_background"
        android:clickable="false"
        android:drawableLeft="@drawable/ic_datee"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:includeFontPadding="false"
        android:inputType="date"
        android:minHeight="48dp"
        android:text="Select date"
        android:textAlignment="center"
        android:textColor="#84DFBE"
        android:textSize="24sp"
        tools:ignore="SpeakableTextPresentCheck"/>

    <Button
        android:id="@+id/inccategory_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="@drawable/btn_background"
        android:text="Choose Category"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inc_amount"
            android:layout_width="237dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="@drawable/textview_background"
            android:clickable="false"
            android:ems="10"
            android:focusableInTouchMode="false"
            android:hint="@string/inc_amount"
            android:includeFontPadding="false"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="#E6E6E6"
            android:textSize="25sp"
            tools:ignore="SpeakableTextPresentCheck"
            tools:targetApi="jelly_bean" />

        <Button
            android:id="@+id/inccheck_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_background"
            android:text="Enter"
            android:textColor="@color/white"
            android:textSize="23sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/nine_incbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_background"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:text="9" />

        <Button
            android:id="@+id/eight_incbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_background"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_marginBottom="5dp"
            android:text="8" />

        <Button
            android:id="@+id/seven_incbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_background"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:text="7" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/six_incbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_background"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:text="6" />

        <Button
            android:id="@+id/five_incbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_background"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_marginBottom="5dp"
            android:text="5" />

        <Button
            android:id="@+id/four_incbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_background"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:text="4" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/three_incbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_background"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:text="3" />

        <Button
            android:id="@+id/two_incbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_background"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_marginBottom="5dp"
            android:text="2" />

        <Button
            android:id="@+id/one_incbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_background"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:text="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/zero_incbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_background"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="10dp"
            android:text="0" />

        <Button
            android:id="@+id/dot_incbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_background"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="10dp"
            android:text="." />

        <Button
            android:id="@+id/del_incbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_background"
            android:text="DEL"
            android:textColor="@color/white"
            android:textSize="30dp" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/incomeprogress"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>