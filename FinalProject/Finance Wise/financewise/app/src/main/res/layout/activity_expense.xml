<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ExpenseActivity">

    <EditText
        android:id="@+id/expense_date"
        android:layout_width="183dp"
        android:layout_height="66dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/date_background"
        android:clickable="false"
        android:drawableLeft="@drawable/ic_datee"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:includeFontPadding="false"
        android:inputType="date"
        android:minHeight="48dp"
        android:text="Select date"
        android:textAlignment="center"
        android:textColor="#84DFBE"
        android:textSize="24sp"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/expcategory_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="@drawable/btn_background"
        android:text="Choose Category"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/exp_amount"
            android:layout_width="237dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="@drawable/textview_background"
            android:clickable="false"
            android:ems="10"
            android:focusableInTouchMode="false"
            android:hint="@string/inc_amount"
            android:includeFontPadding="false"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="#E6E6E6"
            android:textSize="25sp"
            tools:ignore="SpeakableTextPresentCheck"
            tools:targetApi="jelly_bean" />

        <Button
            android:id="@+id/expcheck_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_background"
            android:text="Enter"
            android:textColor="@color/white"
            android:textSize="23sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/nine_expbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_background"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <Button
            android:id="@+id/eight_expbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_background"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <Button
            android:id="@+id/seven_expbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_background"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/six_expbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_background"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <Button
            android:id="@+id/five_expbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_background"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <Button
            android:id="@+id/four_expbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_background"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/three_expbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_background"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <Button
            android:id="@+id/two_expbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_background"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <Button
            android:id="@+id/one_expbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_background"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/zero_expbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_background"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <Button
            android:id="@+id/dot_expbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_background"
            android:text="."
            android:textColor="@color/white"
            android:textSize="30dp" />

        <Button
            android:id="@+id/del_expbtn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_background"
            android:text="DEL"
            android:textColor="@color/white"
            android:textSize="30dp" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/expenseprogress"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>